{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "copy-scripts.bat",
            "type": "shell",
            "command": ".vscode\\scripts\\copy-scripts.bat",
            "presentation": {"echo": false, "reveal": "always", "focus": false, "panel": "shared", "showReuseMessage": false, "clear": true},
        },
        {
            "label": "create-folders.py",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [".vscode\\scripts\\create-folders.py"]
        },
        {
            "label": "md2nexus.bat",
            "type": "shell",
            "command": ".vscode\\scripts\\md2nexus.bat",
            "presentation": {"echo": false, "reveal": "always", "focus": false, "panel": "shared", "showReuseMessage": false, "clear": true},
        },
        {
            "label": "xEdit-to-DSD.py",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [".vscode\\scripts\\xEdit-to-DSD.py"]
        },
        {
            "label": "xTranslator-to-DSD.py",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [".vscode\\scripts\\xTranslator-to-DSD.py"]
        },
        {
            "label": "zip.bat",
            "type": "shell",
            "command": ".vscode\\scripts\\zip.bat",
            "presentation": {"echo": false, "reveal": "always", "focus": false, "panel": "shared", "showReuseMessage": false, "clear": true},
        },
        {
            "label": "Compile description",
            "group": "build",
            "dependsOn": [
                "md2nexus.bat"
            ]
        },
        {
            "label": "Compile DSD from xTranslator output",
            "group": "build",
            "dependsOn": [
                "xTranslator-to-DSD.py"
            ]
        },
        {
            "label": "Compile DSD from xEdit output",
            "group": "build",
            "dependsOn": [
                "xEdit-to-DSD.py"
            ]
        },
        {
            "label": "Create folders from plugins",
            "group": "build",
            "dependsOn": [
                "create-folders.py"
            ]
        },
        {
            "label": "Copy to dist",
            "group": "build",
            "dependsOn": [
                "copy-scripts.bat"
            ]
        },
        {
            "label": "Zip to build",
            "group": "build",
            "dependsOn": [
                "copy-scripts.bat",
                "zip.bat"
            ]
        }
    ]
}
